---
import { supabase } from '../lib/supabase';

// Get some featured content for the hero
let featuredContent: any[] = [];
try {
  const { data, error } = await supabase
    .from('media_items')
    .select('*')
    .gte('average_rating', 8.0)
    .gte('rating_count', 100)
    .order('rating_count', { ascending: false })
    .limit(6);
  
  if (!error && data) {
    featuredContent = data;
  }
} catch (error) {
  console.error('Error fetching featured content:', error);
}
---
<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-900 via-black to-gray-800">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, #10b981 0%, transparent 50%), radial-gradient(circle at 75% 75%, #3b82f6 0%, transparent 50%);"></div>
  </div>
  
  <div class="relative z-10 px-4 py-12 mx-auto max-w-7xl sm:px-6 md:px-12 lg:px-24 lg:py-24">
    <div class="flex flex-col w-full mb-12 text-center">
      <h1 class="max-w-5xl text-4xl text-white md:text-6xl lg:text-8xl lg:max-w-7xl font-bold leading-tight">
        Keep Track of all your <span class="text-lime-400 bg-gradient-to-r from-lime-400 to-green-400 bg-clip-text text-transparent">Entertainment.</span> 
      </h1>
      <p class="max-w-2xl mx-auto mt-8 md:text-2xl text-lg leading-relaxed text-center text-gray-300">
        Discover, organize, and track movies, TV shows, books, and anime. 
        Join thousands of users building their perfect entertainment library.
      </p>
      
      <!-- Feature highlights -->
      <div class="flex flex-wrap justify-center gap-8 mt-12 mb-8">
        <div class="flex items-center space-x-2 text-gray-300">
          <svg class="w-6 h-6 text-lime-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="font-medium">Track Progress</span>
        </div>
        <div class="flex items-center space-x-2 text-gray-300">
          <svg class="w-6 h-6 text-lime-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="font-medium">Rate & Review</span>
        </div>
        <div class="flex items-center space-x-2 text-gray-300">
          <svg class="w-6 h-6 text-lime-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="font-medium">Discover New Content</span>
        </div>
      </div>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
        <a href="/register" class="inline-flex items-center px-8 py-4 bg-lime-600 text-white font-bold rounded-lg hover:bg-lime-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
          </svg>
          Get Started Free
        </a>
        <a href="/search" class="inline-flex items-center px-8 py-4 bg-gray-800 bg-opacity-70 text-white font-semibold rounded-lg hover:bg-opacity-90 transition-all duration-200 border border-gray-600">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Browse Content
        </a>
      </div>
    </div>
    
    <!-- Featured Content Preview -->
    {featuredContent && featuredContent.length > 0 && (
      <div class="mt-16">
        <h3 class="text-2xl font-bold text-white text-center mb-8">Featured Content</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {featuredContent.slice(0, 6).map((item, index) => (
            <div class="group cursor-pointer transform hover:scale-105 transition-all duration-300">
              <div class="relative">
                <img 
                  src={item.poster_url || '/placeholder-poster.jpg'} 
                  alt={item.title}
                  class="w-full h-48 object-cover rounded-lg shadow-lg"
                  loading={index < 3 ? 'eager' : 'lazy'}
                />
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-opacity duration-300 rounded-lg"></div>
                
                <!-- Rating badge -->
                {item.average_rating && (
                  <div class="absolute top-2 right-2 bg-yellow-500 text-black text-xs px-2 py-1 rounded-full font-bold">
                    ‚≠ê {item.average_rating.toFixed(1)}
                  </div>
                )}
              </div>
              <h4 class="text-sm font-semibold text-white mt-2 truncate" title={item.title}>{item.title}</h4>
              <p class="text-xs text-gray-400 capitalize">{item.media_type}</p>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>