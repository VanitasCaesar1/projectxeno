---
interface Props {
  cols?: '1' | '2' | '3' | '4' | '5' | '6' | 'auto';
  gap?: 'sm' | 'md' | 'lg' | 'xl';
  responsive?: boolean;
  class?: string;
}

const { 
  cols = 'auto', 
  gap = 'md', 
  responsive = true,
  class: className = ''
} = Astro.props;

const colClasses = {
  '1': 'grid-cols-1',
  '2': 'grid-cols-2',
  '3': 'grid-cols-3',
  '4': 'grid-cols-4',
  '5': 'grid-cols-5',
  '6': 'grid-cols-6',
  'auto': 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4'
};

const gapClasses = {
  sm: 'gap-2',
  md: 'gap-4',
  lg: 'gap-6',
  xl: 'gap-8'
};

const responsiveClasses = responsive && cols !== 'auto' 
  ? `grid-cols-1 sm:grid-cols-2 lg:${colClasses[cols]}` 
  : colClasses[cols];

const classes = `grid ${responsiveClasses} ${gapClasses[gap]} ${className}`;
---

<div class={classes}>
  <slot />
</div>