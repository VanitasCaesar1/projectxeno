---
interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
  padding?: boolean;
}

const { 
  size = 'lg', 
  class: className = '',
  padding = true
} = Astro.props;

const sizes = {
  sm: 'max-w-2xl',
  md: 'max-w-4xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
  full: 'max-w-full'
};

const paddingClasses = padding ? 'px-4 sm:px-6 lg:px-8' : '';

const classes = `mx-auto ${sizes[size]} ${paddingClasses} ${className}`;
---

<div class={classes}>
  <slot />
</div>